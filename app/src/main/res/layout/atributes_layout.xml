<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="30dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/overseer_bold"
        android:id="@+id/atributeName"
        android:textColor="@color/pipBoyGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/atribute_name_example"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:soundEffectsEnabled="false"
            android:id="@+id/subBt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingTop="5dp"
            android:src="@drawable/sub_icon"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_marginStart="15dp"
            android:fontFamily="@font/overseer_bold"
            android:id="@+id/attributeValue"
            android:textColor="@color/pipBoyGreen"
            android:textSize="40sp"
            android:text="@string/atribute_value_example"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <ImageView
            android:soundEffectsEnabled="false"
            android:id="@+id/addBt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingTop="5dp"
            android:src="@drawable/add_icon"
            tools:ignore="ContentDescription" />

    </LinearLayout>


</LinearLayout>